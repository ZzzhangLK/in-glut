page{
	background-color:#eeeeee;
  overflow-x:hidden;
}
.nav{
	position:fixed;
	top:0;
	z-index:1;
	background-color:#fcfcfc;
	box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.1);
  
}
.tab{
	width:100%;
	height:50px;
	position:fixed;
	top:0;
	z-index:1;
	box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.1);
  background-color: #fcfcfc;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
  -webkit-backface-visibility: hidden;
  -webkit-perspective: 1000;
  -webkit-overflow-scrolling: touch;
  padding-left:5px;
  padding-right:50px;
}
.tab::-webkit-scrollbar{display: none;}
.tab-item{
    display: inline-block;
    width: 78px;
    height: 24px;
    border-radius: 12px;
    background-color: #ffffff;
    border: .5px solid #ebebeb;
    text-align: center;
    margin: 12.5px 3px 12.5px;
    color: #999;
    font-size: 14px;
    line-height: 24px;
}
.active{
	color:#3f51b5;
	font-weight:bold;
}
.article{
	top:60px;
	position:relative;
	min-height:100px;
	width:96%;
	background-color:#ffffff;
	margin:0 auto;
	border:none;
	border-radius:5px;
	border: 0px solid #cccccc;
  box-shadow: 3px 3px 30px #dddddd;
  margin-bottom:10px;
  overflow:hidden;
}
.article_img{
	position:absolute;
	height:75px;
	width:75px;
	background-size:100% 100%;
	background-image:url(https://tvax4.sinaimg.cn/crop.0.0.512.512.180/e8cf2abfly8fvuxep5f4fj20e80e8wf5.jpg);
	left:3%;
	top:13px;
  border-radius:5px;
}
.article_text{
	position:absolute;
	top:10px;
	left:28%;
	font-size:13px;
	color:#808080;
}
.article_title{
	font-size:18px;
	font-weight:bold;
	color:#000000;
	overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  width:520rpx;
  margin-bottom:3px;
}
.article_text_desc{
	overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  width:510rpx;
}
.article_time{
  position:absolute;
  bottom:5px;
  right:10px;
  font-size:13px;
	color:#808080;
}
.low_height{
  min-height:70px!important;
}
.no_left{
  left:10px!important;
}
.big_width{
  width:690rpx!important;
}
.list_none_img{
  position:relative;
	height:70px;
	width:70px;
  margin:0 auto;
  top:20px;
	background-size:100% 100%;
	background-image:url(https://yiban.glut.edu.cn/zlk/image/wxapp/image/到底了呢.png);
}
.list_none_text{
  position:relative;
  margin:0 auto;
  font-size: 12px;
  color:#9f9f9f;
  text-align:center;
  top:30px;
  //left:3px;
  width:150px;
}
.list_none{
