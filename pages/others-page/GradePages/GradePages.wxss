.top_img{
	background-image:url(https://yiban.glut.edu.cn/glutlife/grade/img/bg.png);
	background-size:100% 100%;
	width:100%;
	height:185px;
	position:relative;
	z-index:1;
}
.select{
	position:relative;
	/*background-color:red;*/
	width:90%;
	height:30px;
	margin:0 auto;
}
picker{
	display:inline-block;
	width:18.5%;
	/*border:2px solid black;*/
	position:relative;
	margin-right:10px;
	margin-left:10px;
}
.picker{
	box-shadow: 0px 0px 10px 1px #659AF2;
  color: #659AF2;
  background: #FFF;
  border-radius: 3px;
  font-size: 14px;
  -webkit-appearance: none;
  text-align: center;
  text-align-last: center;
  border: 0;
  outline: 0;
  padding: 0 18%;
  margin: 0;
  width: auto;
  height: 20px;
}
.table{
	  font-size: 12px;
    color: #666;
    height: 30px;
    line-height: 30px;
    list-style: none;
    transition: 0.4s;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    position:relative;
    width:90%;
    margin:0 auto;
    text-align: center;
    
}
.title{
	text-align:center;
	border-bottom:1px solid #659AF2;
	font-weight: bold;
	width:90%;
	margin:0 auto;
}